<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cameraLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0sp"
        android:orientation="vertical"
        android:layout_weight="10"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/placeCText1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="3"
            android:layout_marginTop="0sp"
            android:background="#00000000"
            android:gravity="bottom"
            android:lineSpacingExtra="0sp"
            android:outlineProvider="background"
            android:padding="0dp"
            android:selectAllOnFocus="true"
            android:text="@string/txtPlace"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressCText1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="4"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0sp"
            android:padding="0dp"
            android:selectAllOnFocus="true"
            android:text="@string/txtAddress"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/photoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/photo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/datetimeCText"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="0sp"
            android:layout_weight="5"
            android:background="#f3f3f3"
            android:gravity="center"
            android:inputType=""
            android:text="@string/txtDateTime"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/positionCText"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="0sp"
            android:layout_weight="4"
            android:background="#f3f3f3"
            android:gravity="center"
            android:inputType=""
            android:text="@string/txtPosition"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

