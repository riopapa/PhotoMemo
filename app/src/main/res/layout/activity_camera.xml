<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:contentDescription="@string/photo" />

    <TextView
        android:id="@+id/datetimeCText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:text="@string/date_time"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0016b5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetimeCText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentStart="true"
        android:text="@string/date_time"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0016b5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetimeCText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentStart="true"
        android:text="@string/date_time"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fffb00"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeCText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0sp"
        android:layout_marginBottom="40dp"
        android:text="@string/txtPlace"
        android:textAlignment="center"
        android:textColor="#0016b5"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeCText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6sp"
        android:layout_marginBottom="46dp"
        android:text="@string/txtPlace"
        android:textAlignment="center"
        android:textColor="#0016b5"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeCText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3sp"
        android:layout_marginBottom="43dp"
        android:text="@string/txtPlace"
        android:textAlignment="center"
        android:textColor="#fffb00"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0sp"
        android:layout_marginBottom="10sp"
        android:layout_alignParentBottom="true"
        android:text="@string/txtAddress"
        android:textAlignment="center"
        android:textColor="#0016b5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1sp"
        android:layout_marginBottom="11sp"
        android:layout_alignParentBottom="true"
        android:text="@string/txtAddress"
        android:textAlignment="center"
        android:textColor="#fffb00"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:contentDescription="@string/todo"
        android:padding="0dp"
        android:src="@mipmap/icon_riopapa_sign" />

</RelativeLayout>

