<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photoImage"
        android:layout_margin="8sp"
        android:layout_width="@dimen/camera_image_width"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo" />
    <!--android:layout_width="@dimen/camera_image_width"-->

    <TextView
        android:id="@+id/placeCText1"
        android:layout_width="@dimen/camera_image_width"
        android:layout_height="52sp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:layout_alignBottom="@id/photoImage"
        android:layout_margin="10sp"
        android:text="@string/txtPlace"
        android:textAlignment="center"
        android:textColor="#262a3a"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeCText2"
        android:layout_width="@dimen/camera_image4_width"
        android:layout_height="52sp"
        android:layout_alignBottom="@id/photoImage"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:layout_margin="14sp"
        android:text="@string/txtPlace"
        android:textAlignment="center"
        android:textColor="#262a3a"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeCText3"
        android:layout_width="@dimen/camera_image2_width"
        android:layout_height="52sp"
        android:layout_alignBottom="@id/photoImage"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:layout_margin="12sp"
        android:text="@string/txtPlace"
        android:textAlignment="center"
        android:textColor="#eeeeee"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetimeCText"
        android:layout_width="@dimen/camera_datetime_width"
        android:layout_height="100sp"
        android:layout_toEndOf="@id/photoImage"
        android:layout_margin="0sp"
        android:gravity="center"
        android:inputType=""
        android:text="@string/txtDateTime"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="32sp"
        android:textStyle="bold" />
    <!--android:layout_marginTop="100sp"-->

    <TextView
        android:id="@+id/placeAddress"
        android:layout_width="@dimen/camera_datetime_width"
        android:layout_height="200sp"
        android:layout_toEndOf="@id/photoImage"
        android:layout_below="@id/datetimeCText"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:padding="0dp"
        android:selectAllOnFocus="true"
        android:text="@string/txtPlace"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/positionCText"
        android:layout_width="@dimen/camera_datetime_width"
        android:layout_height="100sp"
        android:layout_toEndOf="@id/photoImage"
        android:layout_below="@id/placeAddress"
        android:layout_alignBottom="@id/photoImage"
        android:gravity="center"
        android:inputType=""
        android:text="@string/txtPosition"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>

