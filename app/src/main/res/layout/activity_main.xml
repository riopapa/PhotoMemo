<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/datetimeText"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="4sp"
            android:layout_weight="4"
            android:background="#3fb578"
            android:gravity="center"
            android:text="@string/txtDateTime"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/positionText"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="4sp"
            android:layout_weight="6"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/txtPosition"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:layout_weight="4"
            android:background="#c0a196"
            android:text="@string/txtCapture"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <EditText
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:height="280sp"
            android:layout_margin="4sp"
            android:inputType="text|textMultiLine"
            android:lineSpacingExtra="4sp"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textSize="28sp"
            android:text="@string/txtAddress"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:autofillHints="">
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200sp">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="0sp"
                android:layout_margin="2sp"
                android:layout_weight="3"
                android:background="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold" />
            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="0sp"
                android:layout_weight="7"
                android:layout_margin="2sp"
                android:layout_height="match_parent">
                <SurfaceView
                    android:id="@+id/camera_surface"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </SurfaceView>
            </FrameLayout>
            <Button
                android:id="@+id/btnCamera"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="3"
                android:background="#29E1D6"
                android:text="@string/txtCamera"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

