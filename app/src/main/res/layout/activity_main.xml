<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textVoice"
        android:autofillHints="phone"
        app:layout_constraintHorizontal_weight="8"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:inputType="text|textMultiLine"
        android:labelFor="@id/addressText"
        android:lineSpacingExtra="4sp"
        android:selectAllOnFocus="true"
        android:text="@string/txtVoice"
        android:textAlignment="center"
        android:hint="Press Voice Button to Record"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSpeak"
        />

    <EditText
        android:id="@+id/addressText"
        android:autofillHints="phone"
        app:layout_constraintHorizontal_weight="8"
        android:layout_width="0dp"
        android:layout_height="120sp"
        android:inputType="text|textMultiLine"
        android:labelFor="@id/textVoice"
        android:lineSpacingExtra="4sp"
        android:selectAllOnFocus="true"
        android:text="@string/txtAddress"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textVoice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSpeak"
        />

    <ImageButton
        android:id="@+id/btnClear"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:contentDescription="@string/todo"
        android:src="@mipmap/icon_clear"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textVoice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSpeak"
        app:layout_constraintBottom_toBottomOf="@id/addressText"
        />

    <ImageButton
        android:id="@+id/btnSpeak"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:contentDescription="@string/todo"
        android:background="#00000000"
        android:src="@mipmap/icon_audio"
        app:layout_constraintTop_toBottomOf="@id/btnClear"
        app:layout_constraintLeft_toRightOf="@id/addressText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/addressText"
        />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="7"
        android:layout_height="400dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/addressText"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintRight_toRightOf="parent">
        <SurfaceView
            android:id="@+id/camera_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </SurfaceView>
    </FrameLayout>

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:rotation="90"
        android:padding="8dp"
        android:background="#c0a196"
        android:text="@string/txtSave"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@id/frame"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</android.support.constraint.ConstraintLayout>
