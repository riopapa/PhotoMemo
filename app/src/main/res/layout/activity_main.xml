<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textVoice"
        android:autofillHints="phone"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:inputType="text|textMultiLine"
        android:labelFor="@id/addressText"
        android:lineSpacingExtra="4sp"
        android:selectAllOnFocus="true"
        android:text="@string/txtVoice"
        android:textAlignment="center"
        android:hint="Press Voice Button to Record"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/addressText"
        android:autofillHints="phone"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:inputType="text|textMultiLine"
        android:labelFor="@id/textVoice"
        android:lineSpacingExtra="4sp"
        android:selectAllOnFocus="true"
        android:text="@string/txtAddress"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textVoice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSpeak"
        />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="440dp"
        app:layout_constraintTop_toBottomOf="@id/addressText"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent">
        <SurfaceView
            android:id="@+id/camera_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </SurfaceView>
    </FrameLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <ImageButton
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="32dp"
        android:layout_margin="4sp"
        android:contentDescription="@string/todo"
        android:src="@mipmap/icon_clear"
        android:background="#00000000"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnShot"
        app:layout_constraintBottom_toBottomOf="@id/btnShot"
        />

    <Button
        android:id="@+id/btnShot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:background="#c0a196"
        android:gravity="center"
        android:rotation="90"
        android:text="@string/txtSave"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/btnClear"
        app:layout_constraintRight_toLeftOf="@id/btnShotExit"
        />

    <Button
        android:id="@+id/btnShotExit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:background="#c0a196"
        android:gravity="center"
        android:rotation="90"
        android:text="@string/txtSaveExit"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/btnShot"
        app:layout_constraintRight_toLeftOf="@id/btnSpeak"
        />

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8sp"
        android:background="#00000000"
        android:contentDescription="@string/todo"
        android:src="@mipmap/micro_phone_off"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/btnShotExit"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
